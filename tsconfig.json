{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "noImplicitReturns": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@/styles/*": [
                "styles/*"
            ],
            "@/lib/*": [
                "lib/*"
            ],
            "@/types/*": [
                "types/*"
            ],
            "@/components/*": [
                "app/components/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}